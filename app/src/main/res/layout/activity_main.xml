<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/item_image"
        android:src="@drawable/guitar" />

    <TextView
        android:id="@+id/item_name"
        style="@style/HeaderTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_image"
        android:layout_centerHorizontal="true"
        android:textSize="18sp" />

    <RatingBar
        android:id="@+id/item_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_name"
        android:layout_centerHorizontal="true"
        android:numStars="5"
        android:rating="0" />

    <TextView
        android:id="@+id/item_attribute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_rating"
        android:layout_centerHorizontal="true"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_price"
        style="@style/TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_attribute"
        android:layout_centerHorizontal="true"
        android:textSize="16sp" />

    <Button
        android:id="@+id/borrow_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_price"
        android:layout_centerHorizontal="true"
        android:text="Borrow"
        android:onClick="onBorrowClicked" />

    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Next"
        android:onClick="onNextClicked" />
    <!-- This is a comment -->
    <SeekBar
        android:id="@+id/item_rating_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:max="10"
        android:progress="5" />
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/item_attribute_chipgroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:singleLine="false"
        app:selectionRequired="false"
        app:singleSelection="false"
        android:layout_marginTop="16dp" />
</RelativeLayout>
